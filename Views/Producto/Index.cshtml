    <div class="row p-3">
        @foreach (var producto in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@producto?.Nombre</h5>
                        <p class="card-text">@producto?.Descripcion</p>
                        <p class="card-text"><strong>Precio:</strong> @producto?.Precio.ToString("C")</p>
                        <p class="card-text"><strong>Stock:</strong> @producto?.Stock</p>
                        <form class="agregar-carrito-form" data-producto-id="@producto?.ProductoId">
                            <div class="form-group">
                                <label for="cantidad">Cantidad:</label>
                                <input type="number" name="cantidad" value="1" min="1" max="@producto?.Stock" class="form-control cantidad" />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fa-solid fa-cart-plus"></i>
                                Agregar al Carrito
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $(".agregar-carrito-form").on("submit", function (e) {
                    e.preventDefault(); // Evitar que el formulario se envíe de forma tradicional

                    var form = $(this);
                    var productoId = form.data("producto-id");
                    var cantidad = form.find(".cantidad").val();

                    $.ajax({
                    url: "@Url.Action("AgregarAlCarritoAjax", "Carrito")",
                        type: "POST",
                        data: { productoId: productoId, cantidad: cantidad },
                        success: function (response) {
                            if (response.success) {
                                // Actualizar el contador del carrito
                                $("#contador-carrito").text(response.totalProductos).show();
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function () {
                            alert("Ocurrió un error al agregar el producto al carrito.");
                        }
                    });
                });
            });
        </script>
    }
