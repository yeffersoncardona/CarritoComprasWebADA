@model IEnumerable<WebCarritoComprasAda.Models.CarritoItem>

@{
    ViewData["Title"] = "Carrito de Compras";
}

<h2>Carrito de Compras</h2>

    @if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @{
                var totalCarrito = Model.Sum(item => item.Cantidad * (item.Producto?.Precio ?? 0));
            }

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Producto?.Nombre</td>
                    <td>@item.Cantidad</td>
                    <td>@item.Producto?.Precio.ToString("C")</td>
                    <td>@((item.Cantidad * (item.Producto?.Precio ?? 0)).ToString("C"))</td>
                    <td>
                        <form asp-controller="Carrito" asp-action="EliminarDelCarritoAjax" method="post">
                            <input type="hidden" name="carritoItemId" value="@item.carritoItemId" />
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <h4>Total del Carrito: @totalCarrito.ToString("C")</h4>
    </div>

    <a asp-controller="Producto" asp-action="Index" class="btn btn-primary">Seguir Comprando</a>
    
    <form asp-controller="Carrito" asp-action="RegistrarCompra" method="post">
        <button type="submit" class="btn btn-success">Finalizar Compra</button>
    </form>
   
}
else
{
    <div class="alert alert-info">
        No hay productos en el carrito.
    </div>
    <a asp-controller="Producto" asp-action="Index" class="btn btn-primary">Ir a Productos</a>
}


